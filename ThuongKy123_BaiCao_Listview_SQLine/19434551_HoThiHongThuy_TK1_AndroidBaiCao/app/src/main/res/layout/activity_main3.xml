<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"
        android:text="Bắt đầu chơi"
        android:background="#1C1A1A"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Máy 1"
        android:textStyle="bold"
        android:background="#F44336"
        android:gravity="center"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/La_1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/b1fv"/>
        <ImageView
            android:id="@+id/La_2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/b1fv"/>
        <ImageView
            android:id="@+id/La_3"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/b1fv"/>

    </LinearLayout>
    <TextView
        android:id="@+id/ketQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#E33A3A"
        android:textStyle="italic"
        android:background="#252525"
        android:text="Kết quả:"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Máy 2"
        android:textStyle="bold"
        android:background="#F44336"
        android:gravity="center"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/La_4"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/b1fv"/>
        <ImageView
            android:id="@+id/La_5"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/b1fv"/>
        <ImageView
            android:id="@+id/La_6"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/b1fv"/>

    </LinearLayout>
    <TextView
        android:id="@+id/ketQua2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#E33A3A"
        android:textStyle="italic"
        android:background="#252525"
        android:text="Kết quả:"/>
    <TextView
        android:id="@+id/Dem"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F44336"
        android:textStyle="italic"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:textColor="#FFEB3B"
        android:text="Kết quả..."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/batDau"
            android:layout_width="193dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="#0E0F10"
            android:text="Bắt đầu"
            android:textColor="#FF9800"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Dung"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="#0E0F10"
            android:text="Dừng lại"
            android:textColor="#FF9800"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>