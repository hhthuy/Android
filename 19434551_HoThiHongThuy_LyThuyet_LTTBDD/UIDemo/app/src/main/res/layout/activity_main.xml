<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_thoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="THoát"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edittext_MaSo"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/textview_HoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ tên: "
            android:textSize="20dp" />

    </LinearLayout>

    <EditText
            android:id="@+id/edittext_HoTen"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    <RadioButton
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giới tính: "
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/radioButton_Nam"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/radioButton_Nu"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Nữ" />


    </RadioButton>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đơn vị: "
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_Them"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm"/>
    <Button
        android:id="@+id/button_Sua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa"/>
    <Button
        android:id="@+id/button_TruyVan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Truy vấn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách trái cây: "
        android:textSize="20dp"/>
    <Spinner
        android:id="@+id/spinner_traicay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/listview_NhanVien"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>