<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập hệ thống"
        android:background="#009688"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_TaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản: "
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editText_TaiKhoan"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:hint="Không được để trống" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_MatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu: "
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editText_Matkhau"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:hint="Không được để trống" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox_Luu"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Lưu thông tin"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/button_DangNhap"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:backgroundTint="#E25BACA4"/>

    <Button
        android:id="@+id/button_Thoat"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="#E25BACA4"
        android:text="Thoát"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp" />
</LinearLayout>