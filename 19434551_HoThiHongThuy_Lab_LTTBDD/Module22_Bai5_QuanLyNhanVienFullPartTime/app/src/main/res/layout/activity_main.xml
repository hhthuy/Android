<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editText_QLNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý nhân viên "
        android:textColor="@color/white"
        android:textSize="30dp"
        android:gravity="center"
        android:background="#009688"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_manv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã NV: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edittext_manv"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Vui lòng nhập thông tin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_tennv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên NV: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edittext_tennv"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Vui lòng nhập thông tin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radioGroup_loaiNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Loại NV: "
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/radBtn_ChinhThuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính thức"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radBtn_ThoiVu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời vụ"
                android:textSize="20dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:id="@+id/button_NhapNV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#ABE4AD"
            android:text="Nhập NV"
            android:textColor="#016105"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="#009688"/>

    <ListView
        android:id="@+id/listView_nhanvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
</LinearLayout>