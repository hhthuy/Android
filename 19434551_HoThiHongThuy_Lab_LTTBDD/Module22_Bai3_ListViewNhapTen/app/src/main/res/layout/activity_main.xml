<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_nhapTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập tên"
            android:background="#EFD177"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editText_nhapTen"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:hint="bin"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_nhap"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nhập"
        android:textSize="20dp"
        android:backgroundTint="#89BDE6"
        android:textColor="@color/black"
        android:textAllCaps="false"/>


    <TextView
        android:id="@+id/txt_chonHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:text="Position: 1; Value = thuy"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <ListView
        android:id="@+id/listview_hoten"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>